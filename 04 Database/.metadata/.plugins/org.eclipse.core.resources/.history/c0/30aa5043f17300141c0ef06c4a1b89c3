/**
 * {@inheritDoc}
 * 
 * @see de.greenrobot.dao.AbstractDaoSession
 */
public class DaoSession extends AbstractDaoSession {

    private final DaoConfig equipoDaoConfig;

    private final EquipoDao equipoDao;

    public DaoSession(SQLiteDatabase db, IdentityScopeType type, Map<Class<? extends AbstractDao<?, ?>>, DaoConfig>
            daoConfigMap) {
        super(db);

        equipoDaoConfig = daoConfigMap.get(EquipoDao.class).clone();
        equipoDaoConfig.initIdentityScope(type);

        equipoDao = new EquipoDao(equipoDaoConfig, this);

        registerDao(Equipo.class, equipoDao);
    }
    
    public void clear() {
        equipoDaoConfig.getIdentityScope().clear();
    }

    public EquipoDao getEquipoDao() {
        return equipoDao;
    }

}
